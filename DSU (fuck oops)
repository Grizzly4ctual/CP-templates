int par[MAXN];
int sz[MAXN];

void make(int n) {
    par[n]=n;
    sz[n]=1;
}
int find(int n) {
    if (par[n]==n) {
        return n;
    }
    return par[n]=find(par[n]);
}
void unio(int a,int b) {
    a=find(a);
    b=find(b);
    if (a!=b) {
        if (sz[a]<sz[b]) {
            swap(a,b);
        }
        par[b]=a;
        sz[a]+=sz[b];
    }
}
